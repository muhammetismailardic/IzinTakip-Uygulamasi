@model IzinTakip.Entities.Concrete.Employee

@{
    ViewData["Title"] = "Update Employee";
}

<!-- Basic form -->
<div class="col-md-12">
    <div class="panel panel-default">
        <header class="panel-heading">Update Employee</header>
        <div class="panel-body">
            <form role="form" asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" class="form-control" type="hidden"/>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName" class="control-label"></label>
                    <input asp-for="MiddleName" class="form-control" />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNum" class="control-label"></label>
                    <input asp-for="PhoneNum" class="form-control" />
                    <span asp-validation-for="PhoneNum" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RecruitmentDate" class="control-label"></label>
                    <input type="Date" asp-for="RecruitmentDate" class="form-control" />
                    <span asp-validation-for="RecruitmentDate" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input asp-for="IsActive" type="checkbox" class="form-check-input">
                    <label class="form-check-label">Is User Active</label>
                </div>

                @*<div class="form-group">
            <label asp-for="ProfileImage">Choose file</label>
            <input asp-for="ProfileImage">
        </div>*@

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>