@model IzinTakip.Entities.Concrete.EmployeeAnnualDetails

@{
    ViewData["Title"] = "AddLeave";
}

<!-- Basic form -->
<div class="col-md-12">
    <div class="panel panel-default">
        <header class="panel-heading">Create Leave</header>
        <div class="panel-body">
            <form asp-action="AddLeave">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <hr />
                <div class="form-group" id="IsOnLive">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input type="Date" asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>

                    <label asp-for="EndDate" class="control-label"></label>
                    <input type="Date" asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="AddLeave" class="btn btn-success" />
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
                <input name="empId" value="@ViewBag.empId" class="form-control" type="hidden" />
            </form>
        </div>
    </div>
</div>